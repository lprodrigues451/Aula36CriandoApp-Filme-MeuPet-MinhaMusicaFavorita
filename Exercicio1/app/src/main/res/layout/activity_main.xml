<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_250"
        android:layout_gravity="center"
        android:contentDescription="@string/descricao_homem_aranha"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margem_36"
        android:src="@drawable/homem_aranha" />

    <TextView
        android:layout_marginTop="@dimen/margem_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/nome_do_filme"
        android:textSize="@dimen/tamanho_texto_16"
        />

</LinearLayout>